{
  "compilerOptions": {
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "es6",
    "outDir": ".build",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types/"],
    "noEmitOnError": true,
    "lib": ["es2015", "dom"],
    "rootDir": "./",
    "skipLibCheck": true,
    "baseUrl": "./"
  },
  "include": ["./"],
  "paths": {
    "@utils": ["./src/utils/"]
  },
  "exclude": [
    "node_modules/",
    "build/",
    "dist/",
    ".cache/",
    ".tmp/",
    "src/admin/",
    "**/*.test.*",
    "src/plugins/**",
    "prisma/generated/**/*"
  ]
}
